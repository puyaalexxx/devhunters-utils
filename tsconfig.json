{
  "compilerOptions": {
    "baseUrl": ".",
    "outDir": "./dist",
    "target": "es2020",
    "module": "ESNext",
    "lib": [
      "dom",
      "esnext"
    ],
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "strictNullChecks": true,
    "noImplicitAny": true,
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "preserve",
    "sourceMap": false,
    "esModuleInterop": true,
  },
  "typeRoots": [
      "./node_modules/@types",
      "./dts-files"
    ],
  "include": [
    "*.ts", // include all .ts files in the root directory
    "utils/**/*", // include .ts files from the src folder if you have one
    "dts-files/**/*.d.ts"
  ],
  "tsc-alias": {
    "resolveFullPaths": true,
    "verbose": false
  },
  "exclude": [
    "node_modules"
  ]
}
